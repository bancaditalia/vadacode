{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    ".test-extensions",
    ".test-storage"
  ],
  "references": [{ "path": "./client" }, { "path": "./server" }]
}
